@using HelpDeskApp.Models
@model Tickets
@{
    ViewData["Title"] = "Add new ticket";
}

<h1 class="text-center p-2">Here you can add tickets!</h1>

<div class="container">
    <div class="row justify-center">
        <div class="col-sm-12">
            <p class="text-danger">@ViewData["AddTicketError"]</p>
        </div>
    </div>
    <div class="row login-row">
        <div class="col-sm-12">
            @using (Html.BeginForm("AddTicket", "Tickets", FormMethod.Post))
            {
                <div class="row justify-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Title </label>
                            @Html.TextBoxFor(m => m.Title, "", new { @class = "form-control", @placeholder = "", @id = "Title" })
                        </div>
                    </div>
                </div>

                <div class="row justify-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Descriptions </label>
                            <div>
                                @Html.TextAreaFor(m => m.Descriptions)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Ticket category </label>
                            <select asp-for="ticketCategory" asp-items="@((List<SelectListItem>)ViewData["Categories"])" name="ticketCategory">
                                <option value="">Pick one</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row justify-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Priority </label>
                            <select asp-for="Priority" asp-items="@((List<SelectListItem>)ViewData["Numbers"])" name="priority">
                                <option value="">Pick one</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row justify-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Responsible user </label>
                            <select asp-for="responsibleUser" asp-items="@((List<SelectListItem>)ViewData["Users"])" name="responsibleUser">
                                <option value="">Pick one</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row justify-center">
                    <div>
                        <button type="submit" class="btn main-btn text-white">Add</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>